<Window x:Class="Pdftools.Desktop.Windows.ToolsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF 工具" Height="600" Width="900">
    <TabControl>
        <TabItem Header="图片→PDF">
            <StackPanel Margin="12">
                <WrapPanel>
                    <Button Content="选择图片" Margin="0,0,8,0" Click="BtnPickImages_Click"/>
                    <TextBlock Text="边距(mm):" VerticalAlignment="Center" Margin="12,0,4,0"/>
                    <ComboBox x:Name="ImgMarginCombo" Width="80">
                        <ComboBoxItem Content="0"/>
                        <ComboBoxItem Content="5"/>
                        <ComboBoxItem Content="10"/>
                    </ComboBox>
                    <TextBlock Text="页面:" VerticalAlignment="Center" Margin="12,0,4,0"/>
                    <ComboBox x:Name="ImgPageSize" Width="100">
                        <ComboBoxItem Content="A4"/>
                        <ComboBoxItem Content="A5"/>
                    </ComboBox>
                    <Button Content="导出PDF" Margin="12,0,0,0" Click="BtnImagesToPdf_Click"/>
                </WrapPanel>
                <ListBox x:Name="ImagesList" Margin="0,8,0,0" Height="420"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="PDF→图片">
            <StackPanel Margin="12">
                <WrapPanel>
                    <Button Content="选择 PDF" Margin="0,0,8,0" Click="BtnPickPdfForImages_Click"/>
                    <TextBlock Text="DPI:" VerticalAlignment="Center" Margin="12,0,4,0"/>
                    <ComboBox x:Name="DpiCombo" Width="80">
                        <ComboBoxItem Content="150"/>
                        <ComboBoxItem Content="300"/>
                        <ComboBoxItem Content="600"/>
                    </ComboBox>
                    <TextBlock Text="格式:" VerticalAlignment="Center" Margin="12,0,4,0"/>
                    <ComboBox x:Name="ImgFormatCombo" Width="100">
                        <ComboBoxItem Content="PNG"/>
                        <ComboBoxItem Content="JPG"/>
                        <ComboBoxItem Content="TIFF"/>
                    </ComboBox>
                    <TextBlock Text="JPEG质量:" VerticalAlignment="Center" Margin="12,0,4,0"/>
                    <TextBox x:Name="JpegQuality" Width="60" Text="90"/>
                    <Button Content="导出图片" Margin="12,0,0,0" Click="BtnPdfToImages_Click"/>
                </WrapPanel>
                <TextBlock x:Name="PdfToImgTip" Margin="0,8,0,0"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="合并/拆分">
            <StackPanel Margin="12">
                <WrapPanel>
                    <Button Content="选择 PDF（多选合并）" Margin="0,0,8,0" Click="BtnPickMerge_Click"/>
                    <Button Content="执行合并" Margin="0,0,8,0" Click="BtnDoMerge_Click"/>
                </WrapPanel>
                <WrapPanel Margin="0,8,0,0">
                    <Button Content="选择 PDF（拆分）" Margin="0,0,8,0" Click="BtnPickSplit_Click"/>
                    <TextBlock Text="起始页:" VerticalAlignment="Center" Margin="12,0,4,0"/>
                    <TextBox x:Name="SplitFrom" Width="60" Text="1"/>
                    <TextBlock Text="结束页:" VerticalAlignment="Center" Margin="12,0,4,0"/>
                    <TextBox x:Name="SplitTo" Width="60" Text="1"/>
                    <Button Content="执行拆分" Margin="12,0,0,0" Click="BtnDoSplit_Click"/>
                    <CheckBox x:Name="ChkSplitEvery" Content="每 N 页一份" Margin="12,0,0,0"/>
                    <TextBox x:Name="SplitEveryN" Width="60" Text="10"/>
                    <Button Content="按 N 拆分" Margin="12,0,0,0" Click="BtnDoSplitEvery_Click"/>
                </WrapPanel>
                <WrapPanel Margin="0,8,0,0">
                    <Button Content="上移" Margin="0,0,8,0" Click="BtnMoveUp_Click"/>
                    <Button Content="下移" Click="BtnMoveDown_Click"/>
                </WrapPanel>
                <ListBox x:Name="MergeList" Margin="0,8,0,0" Height="320"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="旋转/水印/页码">
            <StackPanel Margin="12">
                <GroupBox Header="旋转" Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal" Margin="8">
                        <Button Content="选择 PDF" Margin="0,0,8,0" Click="BtnPickRotate_Click"/>
                        <TextBlock Text="角度:" VerticalAlignment="Center" Margin="12,0,4,0"/>
                        <ComboBox x:Name="RotateAngleCombo" Width="80">
                            <ComboBoxItem Content="90"/>
                            <ComboBoxItem Content="180"/>
                            <ComboBoxItem Content="270"/>
                        </ComboBox>
                        <Button Content="执行旋转" Margin="12,0,0,0" Click="BtnDoRotate_Click"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="文本水印" Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal" Margin="8">
                        <Button Content="选择 PDF" Margin="0,0,8,0" Click="BtnPickWatermark_Click"/>
                        <TextBlock Text="文本:" VerticalAlignment="Center" Margin="12,0,4,0"/>
                        <TextBox x:Name="WatermarkText" Width="240" Text="CONFIDENTIAL"/>
                        <CheckBox x:Name="WatermarkDiagonal" Content="斜向" IsChecked="True" Margin="12,0,0,0"/>
                        <TextBlock Text="透明度:" VerticalAlignment="Center" Margin="12,0,4,0"/>
                        <TextBox x:Name="WatermarkOpacity" Width="60" Text="0.15"/>
                        <Button Content="添加水印" Margin="12,0,0,0" Click="BtnDoWatermark_Click"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="页码" Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal" Margin="8">
                        <Button Content="选择 PDF" Margin="0,0,8,0" Click="BtnPickPageNumber_Click"/>
                        <TextBlock Text="格式:" VerticalAlignment="Center" Margin="12,0,4,0"/>
                        <TextBox x:Name="PageNumberFormat" Width="140" Text=""/>
                        <TextBlock Text="位置:" VerticalAlignment="Center" Margin="12,0,4,0"/>
                        <ComboBox x:Name="PageNumberPos" Width="140">
                            <ComboBoxItem Content="TopLeft"/>
                            <ComboBoxItem Content="TopCenter"/>
                            <ComboBoxItem Content="TopRight"/>
                            <ComboBoxItem Content="BottomLeft"/>
                            <ComboBoxItem Content="BottomCenter"/>
                            <ComboBoxItem Content="BottomRight"/>
                        </ComboBox>
                        <Button Content="添加页码" Margin="12,0,0,0" Click="BtnDoPageNumber_Click"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="压缩优化 (QPDF)">
                    <StackPanel Margin="8">
                        <WrapPanel>
                            <Button Content="选择 PDF" Margin="0,0,8,0" Click="BtnPickCompress_Click"/>
                            <CheckBox x:Name="ChkLinearize" Content="线性化" IsChecked="True" Margin="12,0,0,0"/>
                            <Button Content="执行压缩" Margin="12,0,0,0" Click="BtnDoCompress_Click"/>
                        </WrapPanel>
                        <TextBlock x:Name="CompressTip" Margin="8,4,0,0" Foreground="Gray"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
