<Window x:Class="Pdftools.Desktop.Windows.Templates.TemplatesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="模板管理" Height="420" Width="620">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListView x:Name="TemplateList" DisplayMemberPath="Name" SelectedValuePath="Id"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <TextBox x:Name="RenameBox" Width="220" Margin="0,0,8,0"/>
            <Button Content="重命名" Margin="0,0,8,0" Click="BtnRename_Click"/>
            <Button Content="设为默认" Margin="0,0,8,0" Click="BtnSetDefault_Click"/>
            <Button Content="删除" Margin="0,0,8,0" Click="BtnDelete_Click"/>
            <Button Content="关闭" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
